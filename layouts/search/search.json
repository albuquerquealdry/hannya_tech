{{- $.Scratch.Add "index" slice -}}
{{- range .Site.Sites -}}
    {{- $pages := where .RegularPages "Params.hidden" "!=" true -}}
    {{- range $pages -}}
        {{- $categories := slice -}}
        {{- $tags := slice -}}
        {{ if .Params.tags }}
            {{ range (.GetTerms "tags") }}
                {{- $tags = $tags  | append (dict "LinkTitle" .LinkTitle "RelPermalink" .RelPermalink) -}}
            {{ end }}
        {{ end }}
        {{ if .Params.categories }}
            {{ range (.GetTerms "categories") }}
                {{- $categories = $categories  | append (dict "LinkTitle" .LinkTitle "RelPermalink" .RelPermalink) -}}
            {{ end }}
        {{ end }}
        {{- $type := .Params.tipo | default .Section -}}
        {{- $parent := dict -}}
        {{- if and (eq $type "subpesquisa") (.Params.parent_path) -}}
            {{- $p := site.GetPage "page" .Params.parent_path -}}
            {{- if $p -}}
                {{- $parent = dict "title" $p.Title "permalink" $p.Permalink -}}
            {{- end -}}
        {{- end -}}
        {{- $.Scratch.Add "index" (dict "title" .Title "tags" $tags "categories" $categories "content" .Plain "permalink" .Permalink "type" $type "parent" $parent) -}}
    {{- end -}}
{{- end -}}
{{- $.Scratch.Get "index" | jsonify -}}